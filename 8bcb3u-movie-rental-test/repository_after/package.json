{
  "name": "movie-rental-api",
  "version": "1.0.0",
  "description": "Movie rental API test suite",
  "main": "app.js",
  "scripts": {
    "dev": "node app.js",
    "test": "jest --verbose --coverage",
    "evaluate": "node ../evaluation/evaluation.js",
    "test:meta": "jest ../tests/app_meta.test.js --verbose"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests", "<rootDir>/../tests"],
    "testMatch": ["**/*.test.js"],
    "modulePaths": ["<rootDir>/node_modules"],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}