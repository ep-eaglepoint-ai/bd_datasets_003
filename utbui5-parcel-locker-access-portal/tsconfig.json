{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": ["./repository_after/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "repository_after/**/*.ts",
    "repository_after/**/*.tsx"
  ],
  "typeRoots": ["./node_modules/@types"],
  "exclude": ["node_modules", "repository_after/node_modules"]
}
