{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["repository_after/**/*.ts", "tests/**/*.ts", "evaluation/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
