+import json
+from typing import List, Dict
 
+
+def process_data(input_file: str) -> List[Dict]:
+    """Process JSON data from file as per requirements."""
+    try:
+        with open(input_file, 'r') as f:
+            data = json.load(f)
+    except (FileNotFoundError, json.JSONDecodeError) as e:
+        raise ValueError(f"Invalid input file: {e}")
+    
+    return [item for item in data if item.get('active')]
