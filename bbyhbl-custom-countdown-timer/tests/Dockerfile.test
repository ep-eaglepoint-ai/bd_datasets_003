# Dockerfile.test
FROM node:18-alpine

WORKDIR /app

# Copy test package files
COPY tests/package*.json ./tests/

# Install test dependencies in tests directory
RUN cd tests && npm ci

# Copy test files and repository_after
COPY tests ./tests
COPY repository_after ./repository_after

# Set working directory to tests
WORKDIR /app/tests

# Default command
CMD ["npm", "run", "test:all"]