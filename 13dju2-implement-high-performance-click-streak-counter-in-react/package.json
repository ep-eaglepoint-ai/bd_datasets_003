{
  "name": "click-streak-counter-evaluation",
  "version": "1.0.0",
  "description": "Evaluation for high-performance click streak counter",
  "scripts": {
    "test": "jest",
    "test:after": "jest",
    "evaluate": "node evaluation/evaluate.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/repository_after/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "moduleNameMapper": {
      "^@repo/(.*)$": "<rootDir>/repository_after/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react-jsx",
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "strict": true,
            "module": "ESNext",
            "moduleResolution": "node",
            "target": "ES2020",
            "lib": [
              "DOM",
              "DOM.Iterable",
              "ES2020"
            ]
          }
        }
      ]
    },
    "testTimeout": 10000
  }
}
