    "jest-environment-jsdom": "^27.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.0",
    "@types/jest": "^27.5.2",
    "identity-obj-proxy": "^3.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      ["@babel/preset-react", {
        "runtime": "automatic"
      }]
