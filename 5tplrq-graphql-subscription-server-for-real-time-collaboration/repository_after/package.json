{
  "name": "collab-server",
  "version": "1.0.0",
  "type": "module",
  "description": "GraphQL Subscription Server for Real-time Collaboration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:ci": "prisma db push --accept-data-loss && NODE_OPTIONS='--experimental-vm-modules' npx jest"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@prisma/client": "^5.9.1",
    "apollo-server-express": "^3.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.0",
    "ws": "^8.16.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.12",
    "prisma": "^5.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}