{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "repository_after/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}