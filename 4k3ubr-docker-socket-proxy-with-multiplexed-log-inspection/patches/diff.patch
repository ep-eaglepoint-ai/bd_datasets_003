+	configPath := os.Getenv("AUDIT_CONFIG_PATH")
+	if configPath == "" {
+		configPath = "audit-config.json"
+	}
+
+	if _, err := os.Stat(configPath); err == nil {
+		return loadFromFile(configPath)
+	}
+
+	return getDefaultConfig(), nil
+}
