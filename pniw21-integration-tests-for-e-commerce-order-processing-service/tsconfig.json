{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@sut/*": ["repository_before/services/*"]
    }
  },
  "include": [
    "repository_after/**/*.ts",
    "tests/**/*.ts",
    "repository_before/services/**/*.ts"
  ]
}
