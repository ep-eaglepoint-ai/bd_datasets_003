+        day_entries.append({
+            "status": "on_duty_not_driving",
+            "start_time": current_time,
+            "end_time": current_time + timedelta(hours=self.PICKUP_DROPOFF_DURATION_HOURS),
+            "duration_hours": self.PICKUP_DROPOFF_DURATION_HOURS,
