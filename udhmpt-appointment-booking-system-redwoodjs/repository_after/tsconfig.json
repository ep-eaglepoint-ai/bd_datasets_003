{
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "checkJs": false,
        "jsx": "preserve",
        "noEmitHelpers": false,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "./src/*"
            ],
            "$api/*": [
                "../api/src/*"
            ],
            "web/*": [
                "./web/src/*"
            ],
            "api/*": [
                "./api/src/*"
            ]
        }
    }
}