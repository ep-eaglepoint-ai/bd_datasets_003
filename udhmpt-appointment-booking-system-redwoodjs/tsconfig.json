{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@redwoodjs/graphql-server": [
        "tests/mocks/redwood.ts"
      ],
      "@redwoodjs/api": [
        "tests/mocks/redwood.ts"
      ]
    }
  },
  "include": [
    "repository_after/**/*.ts",
    "repository_after/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}